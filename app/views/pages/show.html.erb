<h1>Pages#show</h1>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice]%>
  </div>
<% end%>

<%= link_to("<< back to List", pages_path, :class => "back-link") %>

<table class="listing" summary="Subject list">
  <thead>
    <tr class="header">
      <th>Subject_id</th>
      <th>Page_name</th>
      <th>Permalink</th>
      <th>Position</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @page.subject_id %></td>
        <td><%= @page.name %></td>
        <td><%= @page.permalink %></td>
        <td><%= @page.position %></td>
        <td class="center"><%= @page.visible ? 'Yes' : 'No' %></td>
        <td class="center"><%= @page.sections.size %></td>
        <td class="actions">
            <%= link_to("Edit", edit_page_path(@page), :class => 'action edit')%>
            <%= link_to("Delete", delete_page_path(@page), :class => 'action delete')%>
        </td>
      </tr>
  </tbody>
</table>