<h1>Subjects#show</h1>

<%= link_to("<< back to List", subjects_path, :class => "back-link") %>

<table class="listing" summary="Subject list">
  <thead>
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @subject.position %></td>
        <td><%= @subject.name %></td>
        <td class="center"><%= @subject.visible %></td>
        <td class="center"><%= @subject.pages.size %></td>
        <td><%= @subject.created_at %></td>
        <td><%= @subject.updated_at %></td>
        <td class="actions">
            <%= link_to("Show", subject_path(@subject), :class => 'action show')%>
            <%= link_to("Edit", '#', :class => 'action edit')%>
            <%= link_to("Delete", '#', :class => 'action delete')%>
        </td>
      </tr>
  </tbody>
</table>
