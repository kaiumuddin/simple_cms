<div class="field mb-4">
  <%= form.label :name, class: "block text-purple-700 text-sm font-bold mb-2" %>
  <%= form.text_field :name, class: "shadow appearance-none border border-purple-500 rounded w-full py-2 px-3 text-purple-700 leading-tight focus:outline-none focus:shadow-outline focus:border-purple-700" %>
</div>

<div class="field mb-4">
  <%= form.label :position, class: "block text-blue-700 text-sm font-bold mb-2" %>
  <%= form.select :position, 1..@subject_count, class: "shadow appearance-none border border-blue-500 rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-700" %>
</div>

<div class="field mb-4">
  <%= form.label :visible, class: "block text-green-700 text-sm font-bold mb-2" %>
  <div class="flex items-center">
    <%= form.check_box :visible, class: "mr-2 leading-tight text-green-700 focus:ring-green-500" %>
    <%= form.label :visible, "Visible", class: "text-green-700 text-sm" %>
  </div>
</div>

<div class="field mb-4">
  <%= form.label :created, class: "block text-purple-700 text-sm font-bold mb-2" %>
  <%= form.datetime_select :created_at, :order => [:month, :day, :year], class: "shadow appearance-none border border-purple-500 rounded w-full py-2 px-3 text-purple-700 leading-tight focus:outline-none focus:shadow-outline focus:border-purple-700" %>
</div>

<div class="actions mt-4">
    <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>