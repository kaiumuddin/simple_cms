<% @page_title = "All Subjects" %>

<!-- app/views/subjects/index.html.erb -->
<h1 class="text-3xl font-bold text-center text-black mb-6">All Subjects</h1>

<div class="text-center mb-4 flex flex-row-reverse">
  <%= link_to("Add New Subject", new_subject_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded") %>
</div>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white rounded-lg shadow-lg">
    <thead>
      <tr class="bg-gray-800 text-white">
        <th class="w-1/12 py-2 px-4">#</th>
        <th class="w-3/12 py-2 px-4">Subject</th>
        <th class="w-2/12 py-2 px-4">Visible</th>
        <th class="w-2/12 py-2 px-4">Pages</th>
        <th class="w-4/12 py-2 px-4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr class="border-b border-gray-200 hover:bg-gray-100">
          <td class="py-2 px-4 text-center"><%= subject.position %></td>
          <td class="py-2 px-4"><%= subject.name %></td>
          <td class="py-2 px-4 text-center"><%= subject.visible %></td>
          <td class="py-2 px-4 text-center"><%= subject.pages.size %></td>
          <td class="py-2 px-4 text-center space-x-2 flex">
            <%= link_to("Show", {:controller => 'subjects', :action => 'show', :id => subject.id}, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded') %>
            <%= link_to("Edit", edit_subject_path(subject), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-1 px-2 rounded') %>
            <%= link_to("Delete", delete_subject_path(subject), class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
