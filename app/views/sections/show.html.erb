<h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Section Details</h1>

<div class="text-center mb-4">
  <%= link_to("<< back to List", sections_path, class: "text-blue-500 hover:text-blue-700 underline") %>
</div>

<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="py-3 px-6">Page ID</th>
        <th scope="col" class="py-3 px-6">Section Name</th>
        <th scope="col" class="py-3 px-6">Position</th>
        <th scope="col" class="py-3 px-6">Visible</th>
        <th scope="col" class="py-3 px-6">Content Type</th>
        <th scope="col" class="py-3 px-6">Content</th>
        <th scope="col" class="py-3 px-6">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <td class="py-4 px-6"><%= @section.page_id %></td>
        <td class="py-4 px-6"><%= @section.name %></td>
        <td class="py-4 px-6"><%= @section.position %></td>
        <td class="py-4 px-6 text-center"><%= @section.visible ? 'Yes' : 'No' %></td>
        <td class="py-4 px-6"><%= @section.content_type %></td>
        <td class="py-4 px-6"><%= @section.content %></td>
        <td class="py-4 px-6">
          <%= link_to("Edit", edit_section_path(@section), class: "text-blue-600 hover:text-blue-900 underline") %>
          <%= link_to("Delete", delete_section_path(@section), class: "text-red-600 hover:text-red-900 underline ml-4") %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
