<h1 class="text-3xl font-bold text-center text-black mb-6">Delete Section</h1>

<div class="text-center mb-4">
  <%= link_to("<< back to List", sections_path, class: "text-blue-500 hover:underline") %>
</div>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-4">Delete Section</h2>

  <%= form_for(@section, method: :delete) do |form| %>
    <p class="mb-4">Are you sure you want to permanently delete this section?</p>

    <p class="text-xl font-semibold text-gray-800 mb-4"><%= form.object.name %></p>

    <div class="text-center">
      <%= form.submit("Delete Section", class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded") %>
    </div>
  <% end %>
</div>
